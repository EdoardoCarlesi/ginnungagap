#ifndef CONFIG_H
#define CONFIG_H


/*--- Code Features (to be adjusted by the configure script) ------------*/
#undef WITH_OPENMP
#undef WITH_MPI
#undef WITH_SPRNG
#undef WITH_SILO
#undef WITH_HDF5
#undef WITH_PROC_DIR
#undef WITH_FFT_FFTW2
#undef WITH_FFT_FFTW3
#undef WITH_MPITRACE
#undef ENABLE_DOUBLE
#undef ENABLE_DEBUG
#define NDIM __NDIM_VALUE__


/*--- Consequences of the Code Features (do NOT change) -----------------*/
#ifdef ENABLE_DEBUG
#  undef NDEBUG
#  define DEBUG
#  define XMEM_TRACK_MEM
#else
#  define NDEBUG
#  undef DEBUG
#  undef XMEM_TRACK_MEM
#endif

#ifdef WITH_OPENMP
#  ifndef _OPENMP
#    undef WITH_OPENMP
#  endif
#endif

#if (!defined ENABLE_FFT_BACKEND_FFTW2 && !defined ENABLE_FFT_BACKEND_FFTW3)
#  define ENABLE_FFT_BACKEND_FFTW3
#endif

#ifdef ENABLE_DOUBLE
typedef double         fpv_t;
#  if (defined ENABLE_FFT_BACKEND_FFTW3)
#    include <complex.h>
typedef double complex fpvComplex_t;
#  endif
#  define FPV_C(a) a
#  define SCNfpv "lf"
#  define PRIfpv "g"
#else
typedef float         fpv_t;
#  if (defined ENABLE_FFT_BACKEND_FFTW3)
#    include <complex.h>
typedef float complex fpvComplex_t;
#  endif
#  define FPV_C(a) a ## f
#  define SCNfpv "f"
#  define PRIfpv "g"
#endif

#if (NDIM == 2)
#  define POW_NDIM(a) ((a) * (a))
#elif (NDIM == 3)
#  define POW_NDIM(a) ((a) * (a) * (a))
#else
#  error NDIM must be 2 or 3
#endif


#endif
